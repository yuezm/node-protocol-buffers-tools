{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "allowJs": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "moduleResolution": "Node",
    "lib": [
      "ESNext"
    ],
    "paths": {
      "Common/*": [
        "packages/common/*"
      ],
      "Transform/*": [
        "packages/transform/*"
      ],
      "Parser/*": [
        "packages/parser/*"
      ],
      "Tokenizer/*": [
        "packages/tokenizer/*"
      ],
      "Generator/*": [
        "packages/generator/*"
      ]
    }
  }
}
